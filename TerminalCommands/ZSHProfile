alias editzp='vim ~/.zshrc'
alias pss='python -m SimpleHTTPServer'
alias dir='ls -la'
alias ll='ls -la'
alias ss='git status -s'
alias gca='git commit --amend'
alias aa='git add .'
alias gc-='git checkout -'
alias gcm='git checkout master'
alias vhalt='cd ~/vagrant/thomas && vagrant halt'
alias hardreset='git reset --hard'
alias getlasthash='git log -n 1 --pretty=format:"%H"'
alias fancydiff='git diff --color | diff-so-fancy'
alias sshadd='ssh-add -K ~/.ssh/id_rsa'
alias ytdla='youtube-dl --extract-audio --audio-format mp3'

